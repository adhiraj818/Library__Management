<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollY="@dimen/activity_vertical_margin"
    tools:context=".activity.registerActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/female_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/femaleuser"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/user_name"

        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/male_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/maleuser"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_above="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="     Enter Username"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/usermail"
        android:layout_marginBottom="10dp"
        android:textColorHint="#000000"
        android:background="@drawable/greybox"
        />

    <EditText
        android:id="@+id/usermail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="     Enter Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#000000"
        android:background="@drawable/greybox"
        />


    <EditText
        android:id="@+id/userpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usermail"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:hint="     Enter Password"
        android:textColorHint="#000000"
        android:background="@drawable/greybox"
        />
    <EditText
        android:id="@+id/re_enter_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpassword"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:hint="     Re-Enter Password"
        android:textColorHint="#000000"
        android:background="@drawable/greybox"
        />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register User"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/re_enter_password"
        android:layout_marginTop="30dp"
        android:background="@drawable/orangebutton"
        />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Login here..."
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/RegisterButton"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"

        />

</RelativeLayout>