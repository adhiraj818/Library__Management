<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.AdminActivity">

    <TextView
        android:id="@+id/admin_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Admin"
        android:fontFamily="serif"
        android:textSize="35sp"
        android:textColor="#ffff"
        />

    <EditText
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_heading"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:ems="12"
        android:hint="         enter book name"
        android:textColorHint="#ffff"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        />

    <EditText
        android:id="@+id/book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_title"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:ems="12"
        android:hint="         enter Author name"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/book_Qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_author"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:textColor="#ffff"
        android:ems="12"
        android:hint="         enter total books to be added"
        android:textColorHint="#ffff"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/book_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_Qty"
        android:layout_marginTop="30dp"
        android:inputType="date"
        android:textColor="#ffff"
        android:ems="12"
        android:hint="         enter submitting date"
        android:textColorHint="#ffff"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/book_edition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_date"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:textColor="#ffff"
        android:ems="12"
        android:hint="         enter book edition"
        android:textColorHint="#ffff"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/book_isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_edition"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:textColor="#ffff"
        android:ems="12"
        android:hint="         enter book isbn no."
        android:textColorHint="#ffff"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/book_isbn"
        android:background="@drawable/orangebutton"
        android:layout_marginTop="10dp"
        android:text="Submit details"
        />

    <Button
        android:id="@+id/submit_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/book_isbn"
        android:background="@drawable/orangebutton"
        android:layout_marginTop="10dp"
        android:text="Submit more details"
        android:layout_toRightOf="@+id/submit_button"
        />
</RelativeLayout>