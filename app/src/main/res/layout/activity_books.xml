<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.BooksActivity">

    <TextView
        android:id="@+id/booksheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Books"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#ffff"
        android:fontFamily="serif"
        />

        <TableLayout
            android:id="@+id/booksLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/booksheading"
            android:layout_marginTop="30dp"
            android:background="#f1f1f1"

            >

            <TableRow>
                <TextView
                    android:text=" ISBN No"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_column="1" />

                <TextView
                android:text="Book Title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                android:layout_column="2" />

                <TextView
                    android:text="Author"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_column="3" />


            </TableRow>

        </TableLayout>

    <TableLayout
        android:id="@+id/datalayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/booksLayout1"
        android:background="#f1f1f1"
        >

    </TableLayout>

        <TableLayout
            android:id="@+id/booksLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datalayout1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:background="#f1f1f1"

            >

            <TableRow>

                <TextView
                    android:text="Qnty"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_column="4" />

                <TextView
                    android:text="Purchase date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_column="2" />

                <TextView
                    android:text="Edition"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_column="2" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/datalayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/booksLayout2"
            android:background="#f1f1f1"
            >

        </TableLayout>




</RelativeLayout>